@import './colors';

// form controls
input.form-control
  color $grayDarkColor
  border 1px solid #D0CCD0
  border-radius 10px
input.form-control:focus, input.form-control:active
  border 1px solid $primaryColor
  fill $primaryColor
  box-shadow none
input.form-control:invalid
  border 1px solid $dangerColor

label.form-control-label
  color #1E2331

input.form-check-input[type='radio']
  // position relative
  cursor pointer
  // display none

input.form-check-input[type='radio']:before
  content ''
  position absolute
  display block
  width 1rem
  height 1rem
  top 0
  left 0
  border 1px solid $grayDarkColor
  background-color $white
  border-radius 100%
input.form-check-input[type='radio']:checked:before
  border 3px solid $primaryColor

input.form-check-input[type='radio']:checked:after
  margin 0
  content ''
  position absolute
  display block
  width .2rem
  height .2rem
  top .3rem
  left .3rem
  border 3px solid $primaryColor
  background-color $grayDarkColor
  border-radius 100%
