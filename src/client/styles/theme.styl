@import './colors';

// typography
html, body, *, :root
  font-family "Roboto Slab",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji"
  --font-family-sans-serif "Roboto Slab",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji"
  --font-family-monospace SFMono-Regular,Menlo,Monaco,Consolas, "Liberation Mono","Courier New",monospace

// buttons
.btn
  border-radius 10px

.btn-primary
  background-color $primaryColor
.btn-primary:focus, .btn-primary:active
  background-color $primaryColorDark

// progress bars
.progress
  background-color $grayColor
  border-radius 0
  min-height 3.5rem
.progress.selected
  background-color $grayDarkColor
  color $white

.progress-bar
  background-color $primaryColor

// form controls
input.form-control
  color $white
  border 1px solid #D0CCD0
  border-radius 10px
input.form-control:focus, input.form-control:active
  border 1px solid $primaryColor
  fill $primaryColor
  box-shadow none
input.form-control:invalid
  border 1px solid $dangerColor

label.form-control-label
  color #1E2331

input.form-check-input[type='radio']
  // position relative
  cursor pointer
  // display none

input.form-check-input[type='radio']:before
  content ''
  position absolute
  display block
  width 1rem
  height 1rem
  top 0
  left 0
  border 1px solid $grayDarkColor
  background-color $white
  border-radius 100%
input.form-check-input[type='radio']:checked:before
  border 3px solid $primaryColor

input.form-check-input[type='radio']:checked:after
  margin 0
  content ''
  position absolute
  display block
  width .2rem
  height .2rem
  top .3rem
  left .3rem
  border 3px solid $primaryColor
  background-color $grayDarkColor
  border-radius 100%

// stickers
.sticker
  margin 0 -15px
  background-color $bgLightColor
  display flex

.sticker-success
  background-color $successColor
  color $grayDarkColor
.sticker-danger
  background-color $dangerColor
  color $white

.sticker-title
  font-weight bold

.sticker-text
  font-size: .75rem

.sticker-icon
  fill $grayDarkColor

// various elements
.epol-divider
  width 100%
  display flex
  justify-content center
  margin 1rem 0
.epol-divider:after
  content ''
  border 1px solid #999CA1
  width 60%
