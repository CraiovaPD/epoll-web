@import './colors';

@font-face {
  font-family: 'Roboto Slab';
  src: url('/assets/fonts/RobotoSlab-Regular.ttf');
}

html, body, *, :root
  font-family "Roboto Slab",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji"
  --font-family-sans-serif "Roboto Slab",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji"
  --font-family-monospace SFMono-Regular,Menlo,Monaco,Consolas, "Liberation Mono","Courier New",monospace

// text colors
.text-primary
  color $primaryColor !important
.text-secondary
  color $secondaryColor !important
