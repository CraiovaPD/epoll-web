        min-height: 100vh;
      }

      body {
        background-color: #FCFCFC;
        color: #353c4e;
      }

      .loading-screen {
        min-width: 100%;
        min-height: 100vh;
        position: relative;
      }

      .loading-screen-logo {
        width: 15rem;
        height: 15rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }

