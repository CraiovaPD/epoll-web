{
  "compilerOptions": {
    "alwaysStrict": true,
    // "allowJs": true,
    "emitBOM": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true
  }
}
